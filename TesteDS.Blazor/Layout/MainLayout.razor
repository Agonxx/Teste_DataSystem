@using Radzen.Blazor
@using TesteDS.Blazor.Components

@inherits LayoutComponentBase
@inject ToastBase _toast

<RadzenComponents @rendermode="RenderMode.InteractiveAuto" />
<ToastProvider />

@if (Inicializado)
{
	<CascadingValue Value="@this" Name="MainLayout">
		<div class="page">
			<main>
				<article class="content px-4">
					<div class="container">
						@Body
					</div>
				</article>
			</main>
		</div>
	</CascadingValue>
}

@code {
	private bool Inicializado { get; set; }

	protected override async Task OnInitializedAsync()
	{
		Inicializado = true;
	}
}